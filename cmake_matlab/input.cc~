#include<fstream>
#include<cstdlib>
#include"TimeCount.hh"
#include"Random.hh"
#include<iostream>
#include "date1.hh"
#include "Circle.hh"
using namespace std;

int main()
{
  TimeCount time;//计时对象
  time.CountTimeStart();//开始计时
  Random *f=new Random();//随机数对象
  Date *oneDay;
  Date *today=new Date(2013,9,29);
  ofstream myoutput;
  myoutput.open("456.txt");   //打开一个新文件
 
  if(myoutput.fail())
  {
   cout<<"Sorry,couldn't open file"<<endl;
   exit(1);   //from cstdlib
  }
 
 for(int i=1;i<=1000;i++)
 {
  myoutput<<i<<"\t"<<f->Uniform()<<endl; 
 }
  oneDay=new Date(2000);
  cout<<"One day is:";
  oneDay->Display();
  
  cout<<"Today is:";
  today->Display();
  
  delete oneDay;
  delete today;
  Circle c(3);
  cout<<"Area="<<c.Area()<<endl;
  time.CountTimeEnd();//结束计时
  time.CoutTime();//输出时间  
  return 0;
  
}



